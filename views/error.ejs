<% layout('layouts/boilerplate') %>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-body text-center p-5">
                    <h1 class="display-4 text-danger fw-bold"><%= statusCode %></h1>
                    <h3 class="mb-3"><%= message %></h3>
                    <p class="text-muted">Oops! Something went wrong while processing your request.</p>
                    <a href="/listings" class="btn btn-danger mt-3">
                        <i class="fas fa-home me-2"></i> Go Back Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
